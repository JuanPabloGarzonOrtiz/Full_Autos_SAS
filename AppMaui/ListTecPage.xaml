<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppMaui.ListTecPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            BackgroundColor="#292929">
            <!--Header-->
            <Grid ColumnDefinitions="Auto, *, Auto">
                <ImageButton
                    Clicked="OnOpenMenuClicked"
                    Source="menu_desplegable.png"
                    Grid.Column="0"
                    WidthRequest="50"
                    HeightRequest="50"
                    Aspect="AspectFit"
                    Background="Transparent"/>

                <ImageButton
                    Source="logo_white.png"
                    Grid.Column="2"
                    WidthRequest="70"
                    HeightRequest="70"
                    Background="Transparent"/>
            </Grid>
            <!--Mapa-->
            <Label 
                Text="Filtrar:"
                TextColor="White"
                FontSize="Header"
                Margin="20"/>
            <Border 
                BackgroundColor="#7B3709">                
                <WebView 
                    x:Name="MyWebView"
                    HeightRequest="500"
                    Margin="10"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"/>
            </Border>
            <!--Lista de Tecnicos-->
            <VerticalStackLayout
                x:Name="section_Tecs"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>