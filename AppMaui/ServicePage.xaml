<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AppMaui.ServicePage">
    <ScrollView>
        <VerticalStackLayout
                BackgroundColor="#292929">
                <!--Secciontion Welcome-->
                <Grid>
                    <!--Backgroud Welcome-->
                    <Image 
                        Source="product_defect.png"
                        Aspect="AspectFill"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"/>
                    <BoxView
                        Color="#90000000"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"/>
                    <VerticalStackLayout
                        Padding="20"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">
                        <!--Header-->
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <ImageButton
                                Clicked="OnOpenMenuClicked"
                                Source="menu_desplegable.png"
                                Grid.Column="0"
                                WidthRequest="50"
                                HeightRequest="50"
                                Aspect="AspectFit"
                                Background="Transparent"/>

                            <ImageButton
                                Source="logo_white.png"
                                Grid.Column="2"
                                WidthRequest="70"
                                HeightRequest="70"
                                Background="Transparent"/>
                        </Grid>
                        <Label
                            x:Name="Name_Service"
                            TextColor="White"
                            FontSize="Header"
                            HorizontalTextAlignment="End"/>
                        <Label 
                            x:Name="Precio_Service"
                            TextColor="White"
                            FontSize="Header"/>
                    </VerticalStackLayout>
                </Grid>
                <!--InformaciÃ³n de Servicio-->
                <HorizontalStackLayout
                    Padding="20">
                    <Image
                        Source="reloj.png"
                        WidthRequest="50"
                        HeightRequest="50"
                        Aspect="AspectFit"/>
                    <VerticalStackLayout>
                        <Label 
                            Text="Tiempo"
                            TextColor="#7B3709"
                            FontSize="Title"/>
                        <Label
                            x:Name="Time_Service"
                            TextColor="White"
                            FontSize="Title"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                <HorizontalStackLayout
                    Padding="20">
                    <ImageButton
                        Clicked="OnOpenListTecnicosClicked"
                        Source="tecnico.png"
                        WidthRequest="50"
                        HeightRequest="50"
                        Aspect="AspectFit"
                        Background="Transparent"/>
                    <Label 
                        Text="Selecionar Tecnico"
                        TextColor="White"
                        FontSize="Title"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout
                    Padding="20">
                    <Image
                        Source="materiales.png"
                        WidthRequest="50"
                        HeightRequest="50"
                        Aspect="AspectFit"/>
                    <VerticalStackLayout>
                        <Label 
                            Text="Materiales"
                            TextColor="#7B3709"
                            FontSize="Title"/>
                        <Label
                            x:Name="Materiales_Service"
                            TextColor="White"
                            FontSize="Title"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                <!--Confirmacion de Servicio-->
                <Button 
                    Text="Confirmar"
                    TextColor="White"
                    FontSize="Large"
                    BackgroundColor="#7B3709"
                    HorizontalOptions="Center"
                    Padding="20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>